<controls:ChildWindow x:Class="WebGraphs.ChooseTermWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="127" 
           Title="input comma separated list of variable powers">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button x:Name="OKButton" Content="OK" Click="OnOK" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,6,7,6" Grid.Row="1" />
        <Button x:Name="OKButton_Copy" Content="use current orientation" Click="OnUseCurrentOrientation" Width="138" Height="23" HorizontalAlignment="Right" Margin="0,6,230,6" Grid.Row="1" />
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="358" Name="_termBox"/>
    </Grid>
</controls:ChildWindow>